    </div>

    <div class="field form-group">
      <%= form.label "Thể loại" %>
      <%= form.text_field :theloai, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Tác giả" %>
      <%= form.text_field :tacgia, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Nhà xuất bản" %>
      <%= form.text_field :nhaxuatban, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Năm xuất bản" %>
      <%= form.number_field :namxuatban, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Giá tiền" %>
      <%= form.text_field :giatien, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Số lượng" %>
      <%= form.number_field :soluong, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "lưu chỉnh sửa", class:"btn btn-color" %>
    </div>
  <% end %>
</div>