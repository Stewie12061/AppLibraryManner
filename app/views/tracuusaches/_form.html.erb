<div class="container-fluid">
  <%= form_with(model: tracuusach) do |form| %>
    <% if tracuusach.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(tracuusach.errors.count, "error") %> prohibited this tracuusach from being saved:</h2>

        <ul>
          <% tracuusach.errors.each do |error| %>
