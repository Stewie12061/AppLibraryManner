<div class="container-fluid">
  <%= form_with(model: quanlyuser) do |form| %>
    <% if quanlyuser.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(quanlyuser.errors.count, "error") %> prohibited this quanlyuser from being saved:</h2>

        <ul>
          <% quanlyuser.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field form-group">
      <%= form.label "Tên người dùng" %>
      <%= form.text_field :tenuser, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Tên đăng nhập" %>
      <%= form.text_field :tendangnhap, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Số điện thoại" %>
      <%= form.number_field :sdt, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Email" %>
      <%= form.text_field :email, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Ngày sinh" %>
      <%= form.text_field :ngaysinh, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Ngày tạo" %>
      <%= form.text_field :ngaytao, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Vị trí" %>
      <%= form.text_field :vitri, class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "lưu chỉnh sửa", class:"btn btn-color" %>
    </div>
  <% end %>
</div>