    <div class="field form-group">
      <%= form.label "Nhà xuất bản" %>
      <%= form.text_field :nhaxuatban, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Năm xuất bản" %>
      <%= form.text_field :namxuatban, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Tồn đầu" %>
      <%= form.number_field :tondau, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Phát sinh nhập" %>
      <%= form.number_field :phatsinhnhap, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Phát sinh xuất" %>
      <%= form.number_field :phatsinhxuat, class:"form-control" %>
    </div>

    <div class="field form-group">
      <%= form.label "Tồn cuối" %>
      <%= form.number_field :toncuoi, class:"form-control" %>
