<div class="container-fluid"> 
  <%= form_with(model: baocaoton) do |form| %>
    <% if baocaoton.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(baocaoton.errors.count, "error") %> prohibited this baocaoton from being saved:</h2>

        <ul>
          <% baocaoton.errors.each do |error| %>
