<div class="container">
  </br>
  <div class="container-fluid">
    <h2 class="title">Nhân viên tạo tài khoản mới cần phải nhập thông tin để quản lý</h2>
    </br>
    <div class="container-fluid row">
      <div class="col-6">
        <%= link_to "Nhập thông tin tại đây" , new_quanlyuser_path, class: 'btn btn-color' %>
      </div>
      <div class="col-6">
        <%= link_to "Quản lý tài khoản đăng nhập", quanlytkdangnhap_index_path, class: 'btn btn-color float-r' %>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <section group='banner' data-controller='splide'>
      <div class="splide" id='splide' data-splide-target='container'>
