          <ul class="splide__list">
            <li class="splide__slide">
              <div class="slide__content">
                <%= image_tag("splide1.jpg") %>
              </div>
            </li>
            <li class="splide__slide">
              <div class="slide__content">
                <%= image_tag("splide2.jpg") %>
              </div>
            </li>
            <li class="splide__slide">
              <div class="slide__content">
                <%= image_tag("splide3.jpg") %>
              </div>
            </li>
            <li class="splide__slide">
              <div class="slide__content">
                <%= image_tag("splide4.jpg") %>
              </div>
            </li>
            <li class="splide__slide">
              <div class="slide__content">
                <%= image_tag("splide5.jpg") %>
              </div>
            </li>
          </ul>
        </div>
      </div>
    </section>
  </div>
  
</div>
